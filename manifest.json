{
  "name": "Secure Access Portal",
  "short_name": "SecurePortal",
  "description": "Secure web access gateway",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Secure Access"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
